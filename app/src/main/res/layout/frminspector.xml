                    android:text="Passenger Count:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="20sp"
                    android:layout_weight="1" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/i_pcount"
                    android:textSize="20sp"
                    android:layout_weight="1" />

            </LinearLayout>


